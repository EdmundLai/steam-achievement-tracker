@model SteamAchievementTracker.Models.GamesInCommon
@{
    ViewData["Title"] = "GetGamesInCommon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Games In Common</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Game Name
            </th>
            <th>
                Hours Played by @Model.SteamName1
            </th>
            <th>
                Hours Played by @Model.SteamName2
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CommonGames)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlaytimeUser1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlaytimeUser2)
                </td>
            </tr>
        }
    </tbody>
</table>